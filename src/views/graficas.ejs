<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Tables</title>
    <%- include("partials/head") %>
    <style>
      table {
        color: white;
        border-collapse: collapse;
        width: 100%;
      }
      
      table, th, td {
        border: 1px solid white;
      }
      
      th, td {
        padding: 8px;
        text-align: left;
      }
      
      .center-image {
        display: block;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>
  <body>
    <%- include("partials/navigation") %>

    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card animated flipInY bg-dark p-3 border-secondary">
          <div class="card-header bg-dark text-white text-center">
            <h3>TABLAS</h3>
          </div>
          <div class="card-body">
            <table>
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Edad</th>
                  <th>País</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Juan</td>
                  <td>25</td>
                  <td>México</td>
                </tr>
                <tr>
                  <td>María</td>
                  <td>30</td>
                  <td>España</td>
                </tr>
                <tr>
                  <td>Carlos</td>
                  <td>40</td>
                  <td>Argentina</td>
                </tr>
              </tbody>
            </table>
            <br>
            <img src="/img/manglar.jpg" class="w-25 m-auto animated bounceIn center-image" alt="Website Logo" />
          </div>
        </div>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
